<% include ./partials/header %>

<div class="container">
        <h1 style="text-align:center;"> edit the Campground</h1>
    <div class="row">
            <div style="width:30%; margin:20px auto;">
                 <form action="/campgrounds/<%=data._id%>?_method=PUT" method="POST">
                <div class="form-group"> <input type="text" class="form-control" name="campground[name]" value="<%=data.name %>"></div> 
                <div class="form-group"> <input type="number" class="form-control" name="campground[price]" placeholder="<%= campground.price %>" min="0.01" step="0.01"></div> 
                <div class="form-group">   <input type="text"class="form-control"  name="campground[image]" value="<%=data.image %>"></div>
                <div class="form-group">   <input type="text"class="form-control"  name="campground[description]" value="<%=data.description %>"></div>
                <div class="form-group">  <button class="btn btn-primary btn-lg btn-block">Update</button> </div>
                  </form>
                  <a href="/campgrounds">Go back</a>
               </div>
              
    </div>
  
      
 
</div>

<% include ./partials/footer %>